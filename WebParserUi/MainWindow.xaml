<Window x:Class="WebParserUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebParserUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Margin="5" Name="UrlTextBox" Padding="3" VerticalAlignment="Center"/>
        <Button Grid.Column="1" Grid.Row="0" Margin="5" Content="Load" Click="Button_Click"/>
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
            <TextBlock Name="OutputTextBlock" Margin="5" TextWrapping="Wrap"/>
        </ScrollViewer>
        
    </Grid>
</Window>
